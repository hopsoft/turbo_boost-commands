<%= tag.div id: local_assigns[:id] || SecureRandom.alphanumeric(10), class: "highlight #{local_assigns[:class]}" do %>
  <% if local_assigns[:source] %>
    <%= tag.pre render_source(source, language: language), class: "overflow-scroll p-5 rounded-lg dark:border dark:border-stone-700" %>
  <% elsif local_assigns[:source_path] %>
    <%= tag.pre render_source(read_source(source_path, erb: local_assigns[:erb]), language: language), class: "overflow-scroll p-5 rounded-lg dark:border dark:border-stone-700" %>
  <% end %>
<% end %>
<%= tag.div path, class: "monospace opacity-50 relative -top-7 right-1 -mb-8 text-right font-extralight" if local_assigns[:path] %>
