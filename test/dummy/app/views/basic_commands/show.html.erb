  <div class="py-4"></div>

  <%= render "examples/example", language: :rb, path: "app/commands/increment_command.rb", source_path: "app/commands/increment_command.rb" %>
  <a href="#" class="ml-3 font-medium text-blue-600 dark:text-blue-500 hover:underline">View on GitHub</a>

  <div class="py-4"></div>

  <%= render "examples/example", language: :rb, path: "app/commands/decrement_command.rb", source_path: "app/commands/decrement_command.rb" %>
