<%= tag.div id: el_id(id, :wrapper) do %>
  <%= tag.h2 id: el_id(id, :label) do %>
    <%= tag.button type: "button",
      aria: { controls: el_id(id), expanded: state[id, :visible] },
      data: {
        turbo_reflex: local_assigns[:frame] ? "VisibilityReflex#toggle" : nil,
        controller: local_assigns[:frame] ? nil : "opener",
        action: "click->opener#toggle",
        opener_controls_value: id,
        id: id,
        selector: el_id(id, :wrapper, prefix: "#"),
        title: title,
        frame: local_assigns[:frame],
        partial: "demos/demo"
      },
      #data: { controller: "opener", opener_controls_value: id, action: "click->opener#toggle" },
      class: "flex items-center justify-between w-full py-5 pl-2 pr-3 font-medium text-left border-b border-gray-200 dark:border-gray-700 dark:hover:bg-gray-800 bg-white hover:bg-gray-100 dark:bg-gray-900 text-gray-500 dark:text-gray-400" do %>
      <span class="flex items-center">
        <code class="!font-thin mr-2 text-gray-400 dark:text-gray-600"><%= @demo_index = demo_index + 1 %></code>
        <%= title %>
      </span>
      <%= render state[id, :visible] ? heroicon(:chevron_down) : heroicon(:chevron_right), solid: true, data: { accordion_icon: true },
        class: "w-5 h-5 shrink-0" %>
    <% end %>
  <% end %>
  <%= tag.div id: id, class: token_list(hidden: !state[id, :visible]), aria: { labelledby: el_id(id, :label) } do %>
    <%= tag.div class: "text-gray-500 dark:text-gray-400 font-light border-b border-gray-200 dark:border-gray-700 p-6 bg-gray-400 dark:bg-black" do %>
      <%= demo_turbo_frame_tag frame if local_assigns[:frame] %>
      <%= yield if block_given? %>
    <% end %>
  <% end %>
<% end %>
