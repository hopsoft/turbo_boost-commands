<%= turbo_frame_tag demo_frame_id(@template_path) do %>
  <%= render "demos/frame" do %>
    <%= render "demos/stats" do %>
      <%= render "demos/stat", label: "Counter", value: @count.to_i, class: "!bg-indigo-600 dark:!bg-indigo-900",
        value_class: ["!text-indigo-200 dark:!text-indigo-300"], label_class: ["!text-indigo-400 dark:!text-indigo-500"] %>
    <% end %>

    <p class="my-8">
      The link below will invoke a reflex before Rails/Hotwire replaces the frame's content.
    </p>

    <%= link_to nil, class: css("flowbite.link.default", "inline-block relative mb-8 ml-0"),
      data: { turbo_reflex: "IncrementReflex#increment", count: @count.to_i } do %>
      Basic Link
      <%= render flowbite(:notification_badge), value: @count.to_i, class: "!-right-6" if @count.to_i > 0 %>
    <% end %>

    <%= render component(:code), language: :erb, class: "text-sm",
      path: "ERB template", source_path: "app/views/demos/increment/frames/link_in_frame/basic_link.erb" %>

    <div class="my-4"></div>

    <%= render component(:code), language: :html, class: "text-sm",
      path: "Rendered HTML", source_path: "app/views/demos/increment/frames/link_in_frame/basic_link.html", erb: true %>
  <% end %>
<% end %>
