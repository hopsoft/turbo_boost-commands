<%= turbo_frame_tag demo_frame_id(@template_path) do %>
  <%= render "demos/frame" do %>
    <%= render "demos/stats" do %>
      <%= render "demos/stat", label: "Counter", value: @count.to_i, class: "!bg-indigo-600 dark:!bg-indigo-900",
        value_class: ["!text-indigo-200 dark:!text-indigo-300"], label_class: ["!text-indigo-400 dark:!text-indigo-500"] %>
    <% end %>

    <p class="my-8">
      Clicking the links below will trigger a reflex before Rails/Hotwire replaces the frame's content.
    </p>

    <%= link_to "Increment +", nil, class: css("flowbite.link.default", "block m-4"), data: { turbo_reflex: "IncrementReflex#increment", count: @count.to_i } %>
    <%= render component(:code), source: 'link_to "Increment +", nil, data: { turbo_reflex: "IncrementReflex#increment", count: @count.to_i }', language: :ruby, class: "text-sm mb-12" %>

    <%= link_to "Decrement -", nil, class: css("flowbite.link.default", "block m-4"), data: { turbo_reflex: "IncrementReflex#decrement", count: @count.to_i } %>
    <%= render component(:code), source: 'link_to "Decrement -", nil, data: { turbo_reflex: "IncrementReflex#decrement", count: @count.to_i }', language: :ruby, class: "text-sm mb-20" %>

    <code class="block m-2 text-sm font-light opacity-60">app/reflexes/increment_reflex.rb</code>
    <%= render component(:code), language: :ruby, class: "text-sm", source_path: "app/reflexes/increment_reflex.rb" %>
  <% end %>
<% end %>
