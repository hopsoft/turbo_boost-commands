<%= turbo_frame_tag "demo-#{params[:id]}" do %>
  <%# State is held in session for this demo %>
  <%= session[:count].to_i %>

  <%
    # The command data attribute instructs the client to perform a remote command when submitted
    # in addition to normal form handling
  %>
  <%= button_to "Form Button (button_to)", demo_path(params[:id]), method: :patch,
    form: { data: { turbo_command: "CounterCommand#increment" } } %>
<% end %>
