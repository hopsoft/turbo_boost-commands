<%= turbo_frame_tag "frame-#{params[:id]}" do %>
  <%# State is held in session for this demo. %>
  <%= session["frame-#{params[:id]}-count"].to_i %>

  <%# The command data attribute instructs the client to perform a remote command when clicked %>
  <%= button_tag "Increment this frame",
    data: { turbo_command: "CounterCommand#increment" } %>

  <%
    # The command data attribute instructs the client to perform a remote command when clicked
    # The turbo_frame data attribute explicitly targets another frame to update
  %>
  <%= button_tag "Increment other frame",
    data: {
      turbo_command: "CounterCommand#increment",
      turbo_frame: "frame-#{params[:other_frame_id]}" } %>
<% end %>
