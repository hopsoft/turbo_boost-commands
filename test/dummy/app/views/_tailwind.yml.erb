# this file lives under app/views so tailwind-css rails sees and compiles the css classes
flowbite:
  alert:
    danger: "p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800"
    dark: "p-4 text-sm text-gray-700 bg-gray-100 rounded-lg dark:bg-gray-700 dark:text-gray-300"
    info: "p-4 mb-4 text-sm text-blue-700 bg-blue-100 rounded-lg dark:text-blue-800 dark:bg-blue-200"
    success: "p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800"
    warning: "p-4 mb-4 text-sm text-yellow-700 bg-yellow-100 rounded-lg dark:bg-yellow-200 dark:text-yellow-800"

  badge:
    dark: "bg-gray-100 text-gray-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300"
    default: "bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800"
    green: "bg-green-100 text-green-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-green-200 dark:text-green-900"
    pink: "bg-pink-100 text-pink-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-pink-200 dark:text-pink-900"
    purple: "bg-purple-100 text-purple-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-purple-200 dark:text-purple-900"

  breadcrumb:
    class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
    active: "!text-gray-900 dark:!text-white"

  button:
    cyan_to_blue: "flex text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-6 py-3.5 text-center mr-2 mb-2"
    pink_to_orange: "flex text-white bg-gradient-to-br from-pink-500 to-orange-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800 font-medium rounded-lg text-sm px-6 py-3.5 text-center mr-2 mb-2"

  kbd: "px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500"

  link:
    button: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
    card: "block p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
    cta: "inline-flex justify-center items-center p-5 text-base font-medium text-gray-500 bg-gray-50 rounded-lg hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:bg-gray-800 dark:hover:bg-gray-700 dark:hover:text-white"
    default: "font-medium text-blue-600 dark:text-blue-500 hover:underline"
    icon: "inline-flex items-center font-medium text-blue-600 dark:text-blue-500 hover:underline"
    paragraph: "text-gray-500 dark:text-gray-400"

  navbar:
    class: "fixed top-0 left-0 z-20 py-2.5 px-2 w-full bg-white border-b border-gray-200 shadow-md sm:px-4 dark:bg-gray-900 dark:border-gray-600"
    container: "container flex flex-wrap justify-between items-center mx-auto"

  sidebar:
    link:
      class: "text-base text-gray-900 font-normal rounded-lg hover:bg-gray-100 flex items-center p-2 group dark:text-gray-200 dark:hover:bg-gray-700"
      active: "bg-gray-100 dark:bg-gray-700"
      icon:
        class: "flex-shrink-0 w-6 h-6 text-gray-500 transition duration-75 group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white"
        active: ""

  tooltip: "inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 transition-opacity duration-300 tooltip"

badge:
  frame: "bg-purple-200 text-purple-500 text-xs font-medium font-mono mr-2 px-2.5 py-0.5 rounded-full dark:bg-purple-900 dark:text-purple-400"

footer:
  link: "rounded-md bg-inherit py-2 px-3 text-sm font-normal text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700"

sidebar:
  link:
    class: "flex items-center py-2 px-2 text-sm font-medium text-gray-500 dark:text-gray-300 rounded-md hover:bg-gray-100 dark:hover:text-white dark:hover:bg-gray-700 group"
    active: "bg-gray-200 dark:!text-white dark:!bg-gray-900"
    icon:
      class: "flex-shrink-0 mr-3 w-6 h-6 text-gray-400 group-hover:text-gray-300"
      active: "text-gray-400 dark:!text-gray-300"

include_in_build: "rotate-180"
